{
  "presets": [
    "es2015",
    "react"
  ],
  "plugins": [
    "transform-runtime",
    "transform-async-to-generator",
    "transform-class-properties",
    "transform-object-rest-spread",
    "transform-decorators-legacy"
  ],
  "ignore": "/node_modules\/(?!diz-theme-)/",
  "env": {
    "production": {
      "presets": [
        ["env", {
          "browsers": ["last 2 versions", "> 3%"],
          "modules": false,
          "useBuildIns": true
        }],
        "react"
      ],
      "plugins": [
        "transform-runtime",
        "transform-async-to-generator",
        "transform-class-properties",
        "transform-object-rest-spread",
        "transform-decorators-legacy"
      ]
    }
  },
}
